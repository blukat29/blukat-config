[push]
    default = simple
[core]
    editor = vim
[pager]
    status = true
[alias]
    lg = log --graph --pretty=format:'%C(yellow)%h%C(auto)%d%Creset %s %Cgreen(%cr)'
    lb = log --oneline --graph --decorate --simplify-by-decoration --all
    s = status
    c = checkout
    co = commit
[filter "gitconfig_nouser"]
  clean = sed -e '/\\[user\\]/,/\\[/ { //!d }' -e '/\\[user\\]/d'
  smudge = cat
